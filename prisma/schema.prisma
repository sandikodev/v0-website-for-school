// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  email     String?  @unique
  role      String   @default("user") // admin, user
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model School {
  id          String   @id @default(cuid())
  name        String
  description String?
  address     String?
  phone       String?
  email       String?
  website     String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  students           Student[]
  applications       Application[]
  messages           Message[]
  formConfigurations FormConfiguration[]
  formSubmissions    FormSubmission[]
  
  @@map("schools")
}

model Student {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  phone       String?
  grade       String   // SD, SMP, SMA
  birthDate   DateTime?
  parentName  String?
  parentPhone String?
  address     String?
  status      String   @default("active") // active, inactive, graduated
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  schoolId     String
  school       School   @relation(fields: [schoolId], references: [id])
  applications Application[]
  messages     Message[]
  
  @@map("students")
}

model Application {
  id        String   @id @default(cuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  program   String   // Reguler, Unggulan, Internasional
  status    String   @default("pending") // pending, approved, rejected
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("applications")
}

model Message {
  id        String   @id @default(cuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  subject   String
  content   String
  type      String   @default("info") // info, warning, urgent
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@map("messages")
}

// Dynamic Form Builder Models
model FormConfiguration {
  id          String   @id @default(cuid())
  name        String   // "Formulir Pendaftaran 2025/2026"
  description String?
  isActive    Boolean  @default(false)
  schema      String   @default("{}") // JSON string of form schema
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  schoolId    String
  school      School   @relation(fields: [schoolId], references: [id])
  
  @@map("form_configurations")
}

model FormSubmission {
  id                   String    @id @default(cuid())
  registrationNumber   String    @unique // "SPMB-2025-001"
  
  // Data Siswa
  namaLengkap          String
  tempatLahir          String?
  tanggalLahir         String?   // Store as string for flexibility
  jenisKelamin         String?
  alamatLengkap        String?
  noHP                 String?
  email                String?
  
  // Data Orangtua
  namaAyah             String?
  pekerjaanAyah        String?
  namaIbu              String?
  pekerjaanIbu         String?
  noHPOrangtua         String?
  
  // Data Sekolah
  asalSekolah          String?
  alamatSekolah        String?
  
  // Data Tambahan
  prestasi             String?
  jalurPendaftaran     String?
  gelombangPendaftaran String?
  
  // Files
  uploadedFiles        String?   // JSON array of file URLs
  
  // Raw Data (untuk custom fields di masa depan)
  rawData              String?   // JSON string
  
  // Status & Review
  status               String    @default("pending") // pending, reviewed, approved, rejected
  notes                String?
  reviewedBy           String?
  reviewedAt           DateTime?
  
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  
  schoolId             String
  school               School    @relation(fields: [schoolId], references: [id])
  
  @@map("form_submissions")
}
