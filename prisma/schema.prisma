// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  email     String?  @unique
  role      String   @default("user") // admin, user
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model School {
  id          String   @id @default(cuid())
  name        String
  description String?
  address     String?
  phone       String?
  email       String?
  website     String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  students           Student[]
  applications       Application[]
  messages           Message[]
  formConfigurations FormConfiguration[]
  formSubmissions    FormSubmission[]
  
  @@map("schools")
}

model Student {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  phone       String?
  grade       String   // SD, SMP, SMA
  birthDate   DateTime?
  parentName  String?
  parentPhone String?
  address     String?
  status      String   @default("active") // active, inactive, graduated
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  schoolId     String
  school       School   @relation(fields: [schoolId], references: [id])
  applications Application[]
  messages     Message[]
  
  @@map("students")
}

model Application {
  id        String   @id @default(cuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  program   String   // Reguler, Unggulan, Internasional
  status    String   @default("pending") // pending, approved, rejected
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("applications")
}

model Message {
  id        String   @id @default(cuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  subject   String
  content   String
  type      String   @default("info") // info, warning, urgent
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@map("messages")
}

// Dynamic Form Builder Models
model FormConfiguration {
  id          String   @id @default(cuid())
  name        String   // "Formulir Pendaftaran 2025/2026"
  description String?
  isActive    Boolean  @default(false)
  schema      String   @default("{}") // JSON string of form schema
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  schoolId    String
  school      School   @relation(fields: [schoolId], references: [id])
  
  @@map("form_configurations")
}

model FormSubmission {
  id                   String    @id @default(cuid())
  registrationNumber   String    @unique // "SPMB-2025-001"
  
  // Data Siswa
  namaLengkap          String
  tempatLahir          String?
  tanggalLahir         String?   // Store as string for flexibility
  jenisKelamin         String?
  alamatLengkap        String?
  noHP                 String?
  email                String?
  
  // Data Orangtua
  namaAyah             String?
  pekerjaanAyah        String?
  namaIbu              String?
  pekerjaanIbu         String?
  noHPOrangtua         String?
  
  // Data Sekolah
  asalSekolah          String?
  alamatSekolah        String?
  
  // Data Tambahan
  prestasi             String?
  jalurPendaftaran     String?
  gelombangPendaftaran String?
  
  // Files
  uploadedFiles        String?   // JSON array of file URLs
  
  // Raw Data (untuk custom fields di masa depan)
  rawData              String?   // JSON string
  
  // Status & Review
  status               String    @default("pending") // pending, reviewed, approved, rejected
  notes                String?
  reviewedBy           String?
  reviewedAt           DateTime?
  
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  
  schoolId             String
  school               School    @relation(fields: [schoolId], references: [id])
  
  @@map("form_submissions")
}

// Contact & WhatsApp Settings
model ContactSetting {
  id          String   @id @default(cuid())
  type        String   @unique // "call_center" or "admissions"
  
  // Contact Info
  phoneNumber String   // 6289649246450 or 085878958029
  label       String   // "Call Center" or "Bantuan SPMB"
  description String?  // Description of service
  
  // WhatsApp Template
  waTemplate  String   @default("") // Template message for wa.me link
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("contact_settings")
}

// SPMB Settings & Content
model SPMBSetting {
  id                String   @id @default(cuid())
  
  // Academic Year
  academicYear      String   @default("2025/2026") // "2025/2026"
  registrationOpen  Boolean  @default(true)
  
  // Hero Section
  heroTitle         String   @default("SPMB SMP IT MASJID SYUHADA")
  heroSubtitle      String   @default("TAHUN PELAJARAN 2025/2026")
  heroDescription   String?
  
  // Gelombang Data (JSON)
  gelombangData     String   @default("[]") // JSON array of gelombang
  
  // Jalur Data (JSON)
  jalurData         String   @default("[]") // JSON array of jalur
  
  // Biaya Data (JSON)
  biayaData         String   @default("{}") // JSON object of biaya
  
  // Syarat & Process (JSON)
  syaratData        String   @default("[]") // JSON array of syarat
  wawancaraData     String   @default("{}") // JSON object of wawancara info
  
  // Contact
  schoolAddress     String?
  schoolPhone       String?
  schoolEmail       String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@map("spmb_settings")
}

// Contact Messages from website contact form
model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String   @db.Text
  status    String   @default("new") // "new" | "read" | "replied" | "archived"
  category  String?  // "pendaftaran" | "kunjungan" | "beasiswa" | "umum"
  priority  String   @default("normal") // "low" | "normal" | "high"
  notes     String?  @db.Text // Admin notes
  repliedAt DateTime?
  repliedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("contact_messages")
  @@index([status])
  @@index([createdAt])
  @@index([email])
}
